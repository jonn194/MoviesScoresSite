<%= form_for @profile do |f|%>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="field form-group" style = "color: white">
        <%= f.text_field :username, placeholder: "Username", class:"form-control"%>
    </div>
    <br>
    <div class="field form-group" style = "color: white">
        <%= f.text_field :favourite_movie, placeholder: "Favourite Movie", class:"form-control"%>
    </div>
    <br>
    <%= f.select :favourite_genre, options_for_select([["Favourite Genre", ""], "Action", "Adventure", "Drama", "Romance", "Comedy", "Horror", "Suspense"]), 
    {}, { class: "form form-group form-control" } %>

    <div class="mb-3" style = "color: white">
        <%= f.label "Profie Image", class:"form-label"%>
        <%= f.file_field :image, class:"form-control"%>
    </div>
    <br>
    <div class="actions">
        <%= f.submit class:"btn btn-primary" %>
    </div>
<% end %>