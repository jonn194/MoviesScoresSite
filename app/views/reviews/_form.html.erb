<%= form_for [@movie, @review] do |f|%>
    <%= render "movies/error_messages" %>
    <div class="field form-group" style = "color: white">
        <%= f.text_area :comment, placeholder: "Comment", class:"form-control"%>
    </div>
    <br>
    <div class="field form-group" style = "color: white">
        <%= f.text_field :rating, placeholder: "Rating", class:"form-control" %>
    </div>
    <br>
    <div class="actions">
        <%= f.submit class:"btn btn-primary" %>
    </div>
<% end %>