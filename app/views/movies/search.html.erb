<div class="container py-4">
    <div class="p-5 mb-4 bg-dark rounded-3">
        <div class="container-fluid py-5">
            <h1 style = "color: white">Search</h1>
            <table class="table table-sm w-auto">
                <thead>
                    <tr style = "color: white">Movies Index>
                        <th colspan="5"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @movies.each do |movie| %>
                        <tr>
                            <td><%= link_to image_tag(movie.image, style:"width:120px; height:169px"), movie %></td>
                            <td style="width:120px; height:169px"> </td>
                            <td style = "width:320px; height:169px">
                                <br>
                                <h4 style = "color: white"> <%=link_to movie.title, movie %> </h4>
                                <br>
                                <p style = "color: white">
                                <strong>Rating: </strong>
                                <%= movie.rating %>
                                </p>
                            </td>
                            <td style="width:800px; height:100px"> </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>